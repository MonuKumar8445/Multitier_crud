@model IEnumerable<CommonLayer.Models.Employee>


    <a asp-action="Create" asp-controller="Employee" class="btn">Create</a>
 <table class="table table-bordered">
    <thead>

        <tr>
            <th>Id</th>
            <th style="width:10%">Name</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Phone</th>
            <th>City</th>
            <th>Email</th>
            <th>Adhar_no</th>
            <th style="width:55%">Action</th>
        </tr>
        
    </thead>

    @foreach(var emp in Model)
    {
        <tr>
            <td>@emp.id</td>
            <td>@emp.Name</td>
            <td>@emp.Salary</td>
            <td>@emp.Age</td>
            <td>@emp.Phone</td>
            <td>@emp.City</td>
            <td>@emp.Email</td>
            <td>@emp.Adhar_no</td>
            <th>
                <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.id" onclick="return confirm('Are you sure to Edit this record ?')"class="btn" id="editbtn">Edit</a>
                <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.id"onclick="return confirm('Are you sure to delete this record ?')" class="btn" id="deletebtn">Delete</a>
            </th>
        </tr>
    }
</table>
